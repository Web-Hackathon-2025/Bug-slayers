@using Karigar.Models
@{
    ViewData["Title"] = "Create Review";
    var request = ViewBag.Request as ServiceRequest;
}

<h2>Create Review</h2>
<hr />

@if (request != null)
{
    <div class="card mb-4">
        <div class="card-body">
            <h5>Service Request Details</h5>
            <p><strong>Service Provider:</strong> @request.ServiceProvider.BusinessName</p>
            <p><strong>Service:</strong> @request.Service.Name</p>
            <p><strong>Completed Date:</strong> @request.UpdatedAt?.ToString("MMM dd, yyyy")</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create" method="post">
                <input type="hidden" name="requestId" value="@request.Id" />
                
                <div class="form-group mb-3">
                    <label class="form-label">Rating *</label>
                    <div>
                        @for (int i = 1; i <= 5; i++)
                        {
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="rating" id="rating@i" value="@i" required />
                                <label class="form-check-label" for="rating@i">
                                    @for (int j = 1; j <= i; j++)
                                    {
                                        <span class="text-warning">â˜…</span>
                                    }
                                </label>
                            </div>
                        }
                    </div>
                </div>
                
                <div class="form-group mb-3">
                    <label class="form-label">Comment (Optional)</label>
                    <textarea name="comment" class="form-control" rows="5"></textarea>
                </div>
                
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Submit Review</button>
                    <a asp-controller="Customer" asp-action="MyRequests" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
}
else
{
    <div class="alert alert-danger">
        <p>Request not found.</p>
    </div>
}
