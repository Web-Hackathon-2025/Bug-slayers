@model Karigar.Models.Service
@{
    ViewData["Title"] = "Add Service";
}

<div class="row justify-content-center fade-in">
    <div class="col-md-8">
        <div class="card shadow-lg">
            <div class="card-header">
                <h2 class="mb-0">Add New Service</h2>
            </div>
            <div class="card-body">
                <form asp-action="AddService" method="post" id="addServiceForm">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>
                    
                    <div class="form-group mb-4">
                        <label asp-for="Name" class="form-label">Service Name *</label>
                        <input asp-for="Name" class="form-control" placeholder="e.g., Pipe Repair, Electrical Installation" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-4">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Describe your service in detail..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-4">
                                <label asp-for="Price" class="form-label">Price *</label>
                                <div class="input-group">
                                    <span class="input-group-text">â‚¹</span>
                                    <input asp-for="Price" type="number" step="0.01" min="0" class="form-control" placeholder="0.00" required />
                                </div>
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-4">
                                <label asp-for="Unit" class="form-label">Pricing Unit *</label>
                                <select asp-for="Unit" class="form-select" required>
                                    <option value="">Select Unit</option>
                                    <option value="per hour">Per Hour</option>
                                    <option value="per job">Per Job</option>
                                    <option value="per sq ft">Per Sq Ft</option>
                                    <option value="per day">Per Day</option>
                                    <option value="fixed">Fixed Price</option>
                                </select>
                                <span asp-validation-for="Unit" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group d-flex gap-3">
                        <button type="submit" class="btn btn-primary flex-fill">
                            <i class="bi bi-plus-circle"></i> Add Service
                        </button>
                        <a asp-action="ManageServices" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

