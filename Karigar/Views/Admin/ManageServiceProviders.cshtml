@model List<Karigar.Models.ServiceProvider>
@using Karigar.Models
@{
    ViewData["Title"] = "Manage Service Providers";
}

<h2>Manage Service Providers</h2>
<hr />

<form asp-action="ManageServiceProviders" method="get" class="mb-3">
    <div class="row g-3">
        <div class="col-md-4">
            <select name="status" class="form-select">
                <option value="">All Status</option>
                <option value="pending" selected="@(ViewContext.HttpContext.Request.Query["status"] == "pending")">Pending</option>
                <option value="approved" selected="@(ViewContext.HttpContext.Request.Query["status"] == "approved")">Approved</option>
                <option value="suspended" selected="@(ViewContext.HttpContext.Request.Query["status"] == "suspended")">Suspended</option>
            </select>
        </div>
        <div class="col-md-6">
            <input type="text" name="search" class="form-control" placeholder="Search..." value="@ViewContext.HttpContext.Request.Query["search"]" />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">Filter</button>
        </div>
    </div>
</form>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Business Name</th>
                    <th>Category</th>
                    <th>City</th>
                    <th>Services</th>
                    <th>Rating</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var provider in Model)
                {
                    <tr>
                        <td>@provider.BusinessName</td>
                        <td>@provider.Category</td>
                        <td>@provider.User.City</td>
                        <td>@provider.Services.Count</td>
                        <td>
                            @for (int i = 1; i <= 5; i++)
                            {
                                <span class="text-warning">@(i <= Math.Round(provider.AverageRating) ? "★" : "☆")</span>
                            }
                            (@provider.TotalReviews)
                        </td>
                        <td>
                            @if (!provider.IsApproved)
                            {
                                <span class="badge bg-warning">Pending</span>
                            }
                            else if (provider.IsActive)
                            {
                                <span class="badge bg-success">Approved</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Suspended</span>
                            }
                        </td>
                        <td>
                            @if (!provider.IsApproved)
                            {
                                <form asp-action="ApproveServiceProvider" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@provider.Id" />
                                    <button type="submit" class="btn btn-sm btn-success">Approve</button>
                                </form>
                            }
                            @if (provider.IsActive && provider.IsApproved)
                            {
                                <form asp-action="SuspendServiceProvider" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@provider.Id" />
                                    <button type="submit" class="btn btn-sm btn-warning">Suspend</button>
                                </form>
                            }
                            else if (!provider.IsActive)
                            {
                                <form asp-action="ApproveServiceProvider" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@provider.Id" />
                                    <button type="submit" class="btn btn-sm btn-success">Reactivate</button>
                                </form>
                            }
                            <form asp-action="RemoveServiceProvider" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@provider.Id" />
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to remove this service provider?')">Remove</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <p>No service providers found.</p>
    </div>
}

