@model dynamic
@{
    ViewData["Title"] = "View Metrics";
}

<h2>Platform Metrics</h2>
<hr />

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Total Users</h5>
                <h3>@Model.TotalUsers</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Total Customers</h5>
                <h3>@Model.TotalCustomers</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Service Providers</h5>
                <h3>@Model.TotalServiceProviders</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Approved Providers</h5>
                <h3>@Model.ApprovedProviders</h3>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-center bg-warning">
            <div class="card-body">
                <h5 class="card-title">Pending Approvals</h5>
                <h3>@Model.PendingProviders</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Total Services</h5>
                <h3>@Model.TotalServices</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Active Services</h5>
                <h3>@Model.ActiveServices</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Total Requests</h5>
                <h3>@Model.TotalRequests</h3>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Requested</h5>
                <h3>@Model.RequestedRequests</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Confirmed</h5>
                <h3>@Model.ConfirmedRequests</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Completed</h5>
                <h3>@Model.CompletedRequests</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Cancelled</h5>
                <h3>@Model.CancelledRequests</h3>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-6">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Total Reviews</h5>
                <h3>@Model.TotalReviews</h3>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Average Rating</h5>
                <h3>@Model.AverageRating.ToString("F2")</h3>
            </div>
        </div>
    </div>
</div>

@if (Model.RequestsByCategory != null)
{
    <div class="card">
        <div class="card-header">
            <h5>Requests by Category</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Category</th>
                            <th>Number of Requests</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.RequestsByCategory)
                        {
                            <tr>
                                <td>@item.Category</td>
                                <td>@item.Count</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

