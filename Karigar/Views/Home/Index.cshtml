@model List<ServiceProviderViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
        }
        .navbar-brand {
            font-weight: 700;
            font-size: 1.8rem;
        }
        .hero-section {
            padding: 80px 20px;
            background: linear-gradient(rgba(10,37,64,0.8), rgba(10,37,64,0.8)), url('https://images.unsplash.com/photo-1521791136064-7986c2920216?auto=format&fit=crop&w=1600&q=90') no-repeat center center;
            background-size: cover;
            color: #fff;
            border-radius: 12px;
            margin-bottom: 50px;
        }
        .hero-title { font-size: 3rem; font-weight: 700; }
        .hero-subtitle { font-size: 1.5rem; margin-top: 10px; }
        .hero-text { font-size: 1.1rem; margin-top: 10px; }
        .search-card { padding: 20px; background: #fff; border-radius: 12px; box-shadow: 0 4px 10px rgba(0,0,0,0.1); }
        .service-card { background: #fff; border-radius: 12px; overflow: hidden; box-shadow: 0 4px 15px rgba(0,0,0,0.1); transition: transform 0.3s; }
        .service-card:hover { transform: translateY(-5px); }
        .service-card-image { width: 100%; height: 200px; object-fit: cover; }
        .category-badge { background-color: #0d6efd; color: #fff; }
        .star { color: #ffc107; }
        .star.empty { color: #e4e5e9; }
        .empty-card img { max-width: 400px; margin-bottom: 20px; border-radius: 12px; }
    </style>
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm mb-4">
        <div class="container">
            <a class="navbar-brand" asp-action="Index">Karigar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="About">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Contact">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-light ms-3" asp-action="Login">Login</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <!-- Hero Section -->
        <div class="hero-section text-center fade-in">
            <h1 class="hero-title">Karigar</h1>
            <p class="hero-subtitle">Find trusted local service providers near you</p>
            <p class="hero-text">Connecting you with skilled professionals in your neighborhood</p>
        </div>

        <!-- Search Card -->
        <div class="row mb-5">
            <div class="col-md-12">
                <div class="search-card fade-in">
                    <form asp-action="Index" method="get">
                        <div class="row g-3 align-items-center">
                            <div class="col-md-4">
                                <input type="text" name="search" class="form-control search-input"
                                       placeholder="Search services..."
                                       value="@ViewContext.HttpContext.Request.Query["search"]" />
                            </div>

                            <div class="col-md-3">
                                <select name="category" class="form-select">
                                    <option value="">All Categories</option>
                                    @foreach (var category in ViewBag.Categories as List<string> ?? new List<string>())
                                    {
                                        <option value="@category"
                                                selected="@(ViewContext.HttpContext.Request.Query["category"] == category)">
                                            @category
                                        </option>
                                    }
                                </select>
                            </div>

                            <div class="col-md-3">
                                <select name="city" class="form-select">
                                    <option value="">All Cities</option>
                                    @foreach (var city in ViewBag.Cities as List<string> ?? new List<string>())
                                    {
                                        <option value="@city"
                                                selected="@(ViewContext.HttpContext.Request.Query["city"] == city)">
                                            @city
                                        </option>
                                    }
                                </select>
                            </div>

                            <div class="col-md-2">
                                <button type="submit" class="btn btn-primary search-btn w-100">
                                    Search
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Service Providers -->
        <div class="row">
            @if (Model != null && Model.Any())
            {
                @foreach (var provider in Model)
                {
                    <div class="col-lg-4 col-md-6 mb-4 fade-in">
                        <div class="service-card">
                            <img src="https://images.unsplash.com/photo-1604014237744-9a9b2b6b8d8a?auto=format&fit=crop&w=1600&q=90"
                                 alt="@provider.BusinessName" class="service-card-image" />

                            <div class="service-card-body p-3">
                                <h5>@provider.BusinessName</h5>
                                <span class="badge category-badge">@provider.Category</span>

                                <p class="service-desc mt-2">
                                    @(provider.Description?.Length > 90
                                                                ? provider.Description.Substring(0, 90) + "..."
                                                                : provider.Description)
                        </p>

                                <p class="location">üìç @provider.City</p>

                                <div class="rating mb-2">
                            @for (int i = 1; i <= 5; i++)
                                    {
                                        <span class="@(i <= Math.Round(provider.AverageRating) ? "star" : "star empty")">‚òÖ</span>
                                    }
                                    <small>(@provider.TotalReviews)</small>
                                </div>

                                <p class="services-count mb-3">
                                    üìã @provider.Services.Count services available
                                </p>

                                <a asp-action="ProviderDetails"
                                   asp-route-id="@provider.Id"
                                   class="btn btn-outline-primary w-100">
                                    View Details
                                </a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <div class="empty-card fade-in text-center p-4 bg-white shadow rounded">
                        <img src="https://images.unsplash.com/photo-1557804506-669a67965ba0?auto=format&fit=crop&w=1600&q=90" class="img-fluid mb-3" />
                        <h4>No service providers found</h4>
                        <p>Try adjusting your search criteria or check back later.</p>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
