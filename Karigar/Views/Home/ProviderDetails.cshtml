@model ServiceProviderViewModel
@using Karigar.Models
@{
    ViewData["Title"] = "Service Provider Details";
    var reviews = ViewBag.Reviews as List<Review> ?? new List<Review>();
}

<div class="row fade-in">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-body">
                <h2>@Model.BusinessName</h2>
                <p class="text-muted">@Model.Category</p>
                <p>@Model.Description</p>
                <p><strong>Phone:</strong> @Model.PhoneNumber</p>
                <p><strong>Location:</strong> @Model.City</p>
                <div class="mb-3">
                    @for (int i = 1; i <= 5; i++)
                    {
                        <span class="text-warning fs-4">@(i <= Math.Round(Model.AverageRating) ? "★" : "☆")</span>
                    }
                    <span class="ms-2">@Model.AverageRating.ToString("F1") (@Model.TotalReviews reviews)</span>
                </div>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header">
                <h4>Services Offered</h4>
            </div>
            <div class="card-body">
                @if (Model.Services.Any())
                {
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Service</th>
                                    <th>Description</th>
                                    <th>Price</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var service in Model.Services)
                                {
                                    <tr>
                                        <td>@service.Name</td>
                                        <td>@service.Description</td>
                                        <td>₹@service.Price @service.Unit</td>
                                        <td>
                                            @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Customer"))
                                            {
                                                <a asp-controller="Customer" asp-action="CreateRequest" 
                                                   asp-route-serviceProviderId="@Model.Id" 
                                                   asp-route-serviceId="@service.Id" 
                                                   class="btn btn-sm btn-primary">Request Service</a>
                                            }
                                            else if (User.Identity?.IsAuthenticated != true)
                                            {
                                                <a asp-controller="Account" asp-action="Login" class="btn btn-sm btn-primary">Login to Request</a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted">No services available.</p>
                }
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h4>Reviews</h4>
            </div>
            <div class="card-body">
                @if (reviews.Any())
                {
                    @foreach (var review in reviews)
                    {
                        <div class="border-bottom pb-3 mb-3">
                            <div class="mb-2">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <span class="text-warning">@(i <= review.Rating ? "★" : "☆")</span>
                                }
                                <strong class="ms-2">@review.Customer.FullName</strong>
                                <span class="text-muted ms-2">@review.CreatedAt.ToString("MMM dd, yyyy")</span>
                            </div>
                            @if (!string.IsNullOrEmpty(review.Comment))
                            {
                                <p>@review.Comment</p>
                            }
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted">No reviews yet.</p>
                }
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

