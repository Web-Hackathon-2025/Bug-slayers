@model Karigar.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="login-container" style="min-height:80vh; display:flex; align-items:center; background:linear-gradient(135deg, #f9f9f9 0%, #e6e6e6 100%); padding:2rem 0; font-family:'Poppins', sans-serif;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8">
                <div class="card shadow-lg" style="border-radius:16px; overflow:hidden; border:none;">
                    <div class="row g-0">
                        <div class="col-md-5 d-none d-md-block" style="background:url('https://images.unsplash.com/photo-1582719478248-54e9f2af4efc?w=1000&fit=crop') center/cover no-repeat; border-radius:16px 0 0 16px; min-height:500px; box-shadow: inset 0 0 20px rgba(0,0,0,0.1); transition:transform 0.3s ease;" onmouseover="this.style.transform='scale(1.03)'" onmouseout="this.style.transform='scale(1)'"></div>
                        <div class="col-md-7">
                            <div class="card-body" style="padding:2rem 2rem;">
                                <div class="text-center mb-4">
                                    <h2 class="card-title mb-2" style="color:#0a2540; font-weight:700; font-size:1.75rem;">Welcome Back</h2>
                                    <p class="text-muted" style="font-size:0.95rem; color:#6c757d !important;">Sign in to your account</p>
                                </div>

                                <form asp-action="Login" method="post" id="loginForm" novalidate>
                                    <div asp-validation-summary="All" class="text-danger mb-3"></div>
                                    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

                                    <div class="form-group mb-3">
                                        <label asp-for="Email" class="form-label" style="font-weight:500; margin-bottom:0.5rem; color:#0a2540;">Email Address</label>
                                        <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email" required style="border-radius:8px; padding:0.65rem 0.75rem; border:1px solid #ced4da; transition:border-color 0.3s, box-shadow 0.3s;" onfocus="this.style.borderColor='#0a2540'; this.style.boxShadow='0 0 0 0.2rem rgba(10,37,64,0.25)'" onblur="this.style.borderColor='#ced4da'; this.style.boxShadow='none'" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <div class="form-group mb-3">
                                        <label asp-for="Password" class="form-label" style="font-weight:500; margin-bottom:0.5rem; color:#0a2540;">Password</label>
                                        <div class="password-wrapper" style="position:relative;">
                                            <input asp-for="Password" type="password" class="form-control" id="loginPassword" placeholder="Enter your password" required style="border-radius:8px; padding:0.65rem 0.75rem; border:1px solid #ced4da; transition:border-color 0.3s, box-shadow 0.3s;" onfocus="this.style.borderColor='#0a2540'; this.style.boxShadow='0 0 0 0.2rem rgba(10,37,64,0.25)'" onblur="this.style.borderColor='#ced4da'; this.style.boxShadow='none'" />
                                            <button type="button" class="password-toggle" onclick="togglePassword('loginPassword', this)" style="position:absolute; right:0.5rem; top:50%; transform:translateY(-50%); border:none; background:none; cursor:pointer; padding:0.25rem; color:#0a2540;">
                                                <i class="bi bi-eye" id="loginPasswordIcon"></i>
                                            </button>
                                        </div>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <div class="form-group mb-4">
                                        <div class="form-check">
                                            <input asp-for="RememberMe" class="form-check-input" />
                                            <label asp-for="RememberMe" class="form-check-label">
                                                @Html.DisplayNameFor(m => m.RememberMe)
                                            </label>
                                        </div>
                                    </div>

                                    <div class="form-group mb-3">
                                        <button type="submit" class="btn btn-primary w-100" style="background-color:#0a2540; border-color:#0a2540; font-weight:600; padding:0.65rem; transition:background-color 0.3s, transform 0.2s;" onmouseover="this.style.backgroundColor='#142d52'; this.style.transform='translateY(-2px)'" onmouseout="this.style.backgroundColor='#0a2540'; this.style.transform='translateY(0)'">Sign In</button>
                                    </div>
                                </form>

                                <div class="text-center">
                                    <p class="mb-0">Don't have an account? <a asp-action="Register" style="color:#0a2540; font-weight:600; transition:color 0.3s;" onmouseover="this.style.color='#1e3d70'" onmouseout="this.style.color='#0a2540'">Register here</a></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function togglePassword(inputId, button) {
            const input = document.getElementById(inputId);
            const icon = button.querySelector('i');
            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('bi-eye');
                icon.classList.add('bi-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
            }
        }
    </script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}
